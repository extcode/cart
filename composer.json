{
    "name": "extcode/cart",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0-or-later"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "cart"
    ],
    "authors": [
        {
            "name": "Daniel Lorenz",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart/issues"
    },
    "require": {
        "php": ">=5.6.0",
        "typo3/cms-core": "^7.6.0 || ^8.7.0"
    },
    "require-dev": {
        "nimut/testing-framework": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\Cart\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\Cart\\Tests\\": "Tests"
        }
    },
    "replace": {
        "cart": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}