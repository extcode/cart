{
    "name": "extcode/cart",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0-or-later"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "cart"
    ],
    "authors": [
        {
            "name": "Daniel Gohlke",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart/issues"
    },
    "require": {
        "php": ">=7.0.0 <7.5",
        "typo3/cms-core": "^8.7",
        "typo3/cms-form": "^8.7"
    },
    "require-dev": {
        "nimut/testing-framework": "^2.0 || ^3.0 || ^4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "helmich/typo3-typoscript-lint": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\Cart\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\Cart\\Tests\\": "Tests"
        }
    },
    "replace": {
        "extcode/cart": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "cart",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".Build",
            "web-dir": ".Build/public"
        }
    }
}
